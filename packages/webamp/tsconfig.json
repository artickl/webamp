{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "esnext",
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "pretty": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "demo/built"]
}
